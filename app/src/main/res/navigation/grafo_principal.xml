<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grafo_principal"
    app:startDestination="@id/primerFragmento">
    <!-- Con startDestination indicamos el fragment inicio del grafo. La casita en la vista dise침o -->

    <!-- Declaraci칩n del primer fragment del Grafo, con sus action y argumentos (dentro del action)-->
    <fragment
        android:id="@+id/primerFragmento"
        android:name="com.example.ejemplofragment.PrimerFragmento"
        android:label="fragment_primer_fragmento"
        tools:layout="@layout/fragment_primer_fragmento" >
        <action
            android:id="@+id/action_primerFragmento_to_segundoFragment"
            app:destination="@id/segundoFragment"
            app:enterAnim="@android:anim/slide_in_left" />
    </fragment>
    <!-- Declaraci칩n del segundo fragment del Grafo, con sus action  -->
    <fragment
        android:id="@+id/segundoFragment"
        android:name="com.example.ejemplofragment.SegundoFragment"
        android:label="fragment_segundo"
        tools:layout="@layout/fragment_segundo" >
        <action
            android:id="@+id/action_segundoFragment_to_tercerFragment"
            app:destination="@id/tercerFragment" />
        <argument
            android:name="name"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="Guest" />
    </fragment>

    <!-- Declaraci칩n del tercer fragment del Grafo, con sus action y argumentos  -->
    <fragment
        android:id="@+id/tercerFragment"
        android:name="com.example.ejemplofragment.TercerFragment"
        android:label="fragment_tercer"
        tools:layout="@layout/fragment_tercer" >
        <argument
            android:name="provincia"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_tercerFragment_to_primerFragmento"
            app:destination="@id/primerFragmento" />
        <action
            android:id="@+id/action_tercerFragment_to_segundoFragment"
            app:destination="@id/segundoFragment" />
    </fragment>
</navigation>